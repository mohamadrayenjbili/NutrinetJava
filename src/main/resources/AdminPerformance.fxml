<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Objective.AdminPerformanceController"
            prefHeight="600.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to right, #00897B, #4DB6AC);">

    <!-- Left sidebar for navigation -->
    <VBox AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          style="-fx-background-color: linear-gradient(to bottom, #00897B, #4DB6AC); -fx-background-radius: 0 20 20 0;"
          prefWidth="220">

        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30 10;">
            <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                <Image url="@/images/app_logo.png" />
            </ImageView>
            <Label text="Nutrinet" style="-fx-text-fill: white; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>
            <Separator prefWidth="180" style="-fx-background-color: rgba(255,255,255,0.3);" />
        </VBox>

        <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-padding: 20 15;">
            <Button text="Dashboard" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 15; -fx-graphic-text-gap: 10;">
                <graphic>
                    <Region prefHeight="18" prefWidth="18" style="-fx-background-color: white; -fx-shape: 'M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z';" />
                </graphic>
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button text="Objectives" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 15; -fx-graphic-text-gap: 10;">
                <graphic>
                    <Region prefHeight="18" prefWidth="18" style="-fx-background-color: white; -fx-shape: 'M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z';"/>
                </graphic>
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button text="Performances" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: rgba(255,255,255,0.4); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 15; -fx-graphic-text-gap: 10;">
                <graphic>
                    <Region prefHeight="18" prefWidth="18" style="-fx-background-color: white; -fx-shape: 'M9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z';"/>
                </graphic>
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button text="Settings" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 15; -fx-graphic-text-gap: 10;">
                <graphic>
                    <Region prefHeight="18" prefWidth="18" style="-fx-background-color: white; -fx-shape: 'M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z';" />
                </graphic>
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </VBox>

        <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-padding: 20;">
            <Button text="LOGOUT" maxWidth="Infinity"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 15;">
                <graphic>
                    <Region prefHeight="18" prefWidth="18" style="-fx-background-color: white; -fx-shape: 'M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z';" />
                </graphic>
                <font>
                    <Font size="13.0" />
                </font>
            </Button>
        </VBox>
    </VBox>

    <!-- Main content area -->
    <StackPane AnchorPane.leftAnchor="240" AnchorPane.rightAnchor="20"
               AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">

        <VBox alignment="TOP_LEFT" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <!-- Header section -->
            <VBox spacing="10" style="-fx-background-color: #E0F2F1; -fx-background-radius: 10; -fx-padding: 15;">
                <Label text="PERFORMANCE ADMINISTRATION"
                       style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #00897B;"/>

                <Label fx:id="lblObjectiveName"
                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #00796B;"/>
                <Label fx:id="lblObjectiveDetails"
                       style="-fx-font-size: 14px; -fx-text-fill: #00897B;"/>

                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Button fx:id="btnActualiser" text="Refresh" onAction="#handleActualiser"
                            style="-fx-background-color: #B2DFDB; -fx-text-fill: #00796B; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;">
                        <graphic>
                            <Region prefHeight="16" prefWidth="16" style="-fx-background-color: #00796B; -fx-shape: 'M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z';"/>
                        </graphic>
                    </Button>

                    <Button fx:id="btnAjouter" text="Add Performance" onAction="#handleAjouter"
                            style="-fx-background-color: linear-gradient(to right, #00897B, #4DB6AC); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;">
                        <graphic>
                            <Region prefHeight="16" prefWidth="16" style="-fx-background-color: white; -fx-shape: 'M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z';"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

            <!-- Search bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #E0F2F1; -fx-background-radius: 5; -fx-padding: 10;">
                <TextField fx:id="tfRecherche" HBox.hgrow="ALWAYS" promptText="Search by metric..."
                           style="-fx-background-color: transparent; -fx-text-fill: #00897B; -fx-prompt-text-fill: #80CBC4;"/>
                <Button fx:id="btnRecherche" text="Search" onAction="#handleRecherche"
                        style="-fx-background-color: #B2DFDB; -fx-text-fill: #00897B; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 15;">
                    <graphic>
                        <Region prefHeight="16" prefWidth="16" style="-fx-background-color: #00897B; -fx-shape: 'M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z';"/>
                    </graphic>
                </Button>
            </HBox>

            <!-- Performances list -->
            <VBox style="-fx-background-color: #E0F2F1; -fx-background-radius: 10; -fx-padding: 15;" VBox.vgrow="ALWAYS">
                <ListView fx:id="listPerformances" VBox.vgrow="ALWAYS"
                          style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
            </VBox>

            <!-- Footer -->
            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 5;">
                <Label text="ADMINISTRATION PANEL" style="-fx-font-style: italic; -fx-text-fill: #00897B;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnRetour" text="Back to Objectives" onAction="#handleRetour"
                        style="-fx-background-color: transparent; -fx-text-fill: #00897B; -fx-border-color: #00897B; -fx-border-radius: 5; -fx-padding: 5 15;">
                </Button>
            </HBox>
        </VBox>
    </StackPane>
</AnchorPane>