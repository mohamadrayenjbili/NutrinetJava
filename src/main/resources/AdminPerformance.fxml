<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Objective.AdminPerformanceController"
            prefHeight="500.0" prefWidth="800.0">

    <VBox spacing="10" AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="10"
          style="-fx-background-color: #1a1a2e;">

        <!-- Titre et informations de l'objectif -->
        <VBox spacing="5" style="-fx-background-color: #16213e; -fx-padding: 15;">
            <Label text="ADMINISTRATION DES PERFORMANCES"
                   style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #e94560;"/>

            <Label fx:id="lblObjectiveName"
                   style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #ffffff;"/>
            <Label fx:id="lblObjectiveDetails"
                   style="-fx-font-size: 14px; -fx-text-fill: #c0c0c0;"/>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="btnActualiser" text="Actualiser" onAction="#handleActualiser"
                        style="-fx-background-color: #4a47a3; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button fx:id="btnAjouter" text="Ajouter une performance" onAction="#handleAjouter"
                        style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <padding>
                    <Insets top="10" bottom="5" />
                </padding>
            </HBox>
        </VBox>

        <!-- Barre de recherche -->
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #0f3460; -fx-padding: 10;">
            <Label text="Rechercher:" style="-fx-text-fill: #ffffff;"/>
            <TextField fx:id="tfRecherche" HBox.hgrow="ALWAYS" promptText="Rechercher par mÃ©trique..."
                       style="-fx-background-color: #16213e; -fx-text-fill: white;"/>
            <Button fx:id="btnRecherche" text="Rechercher" onAction="#handleRecherche"
                    style="-fx-background-color: #4a47a3; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

        <!-- ListView pour les performances -->
        <ListView fx:id="listPerformances" VBox.vgrow="ALWAYS"
                  style="-fx-background-color: #16213e; -fx-control-inner-background: #16213e; -fx-text-fill: white;"/>

        <!-- Boutons d'action en bas de la page -->
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 5;">
            <Label text="PANNEAU D'ADMINISTRATION" style="-fx-font-style: italic; -fx-text-fill: #e94560;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnRetour" text="Retour aux objectifs" onAction="#handleRetour"
                    style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>