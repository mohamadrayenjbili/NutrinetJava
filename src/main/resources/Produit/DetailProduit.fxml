<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.Produit.DetailProduitController"
      spacing="15" alignment="TOP_CENTER" prefWidth="800" prefHeight="600" style="-fx-background-color: #ffffff;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="lblNom" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <ImageView fx:id="imgProduit" fitWidth="250" fitHeight="250" preserveRatio="true"/>

    <Label fx:id="lblPrix" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>
    <Label fx:id="lblCategorie" style="-fx-font-size: 16px; -fx-text-fill: #636e72;"/>
    <Label fx:id="lblStock" style="-fx-font-size: 16px; -fx-text-fill: #636e72;"/>

    <TextArea fx:id="lblDescription" editable="false" wrapText="true" prefHeight="150" prefWidth="500"
              style="-fx-control-inner-background: #ecf0f1; -fx-font-size: 14px;"/>

    <Button fx:id="btnRetour" onAction="#handleRetour" text="Retour"
            style="-fx-background-color: #3498db; -fx-text-fill: white;" />

</VBox>
