<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Produit.AjouterProduitController"
            prefHeight="600" prefWidth="800"
            style="-fx-background-color: #f5f5f5;">

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
          AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="Ajouter un Produit" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"/>

        <GridPane hgap="15" vgap="15" style="-fx-padding: 0 30 0 30;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250"/>
            </columnConstraints>

            <!-- Première ligne -->
            <Label text="Nom du produit:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="tfNomProduit" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label fx:id="lblNomError" textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Prix (€):" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="tfPrix" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <Label fx:id="lblPrixError" textFill="red" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

            <!-- Deuxième ligne -->
            <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="cbCategorie" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label fx:id="lblCategorieError" textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Stock:" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="tfStock" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <Label fx:id="lblStockError" textFill="red" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

            <!-- Troisième ligne -->
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="taDescription" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.rowSpan="3"/>
            <Label fx:id="lblDescError" textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <Label text="Image:" GridPane.columnIndex="2" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
            <VBox GridPane.columnIndex="3" GridPane.rowIndex="4" spacing="10">
                <Button fx:id="btnChoisirImage" text="Choisir une image" onAction="#handleChoisirImage" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;"/>
                <ImageView fx:id="imagePreview" fitWidth="150" fitHeight="150" style="-fx-border-color: #ddd; -fx-border-radius: 5;"/>
            </VBox>

            <!-- Boutons en bas -->
            <HBox spacing="15" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="4">
                <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 100;"/>
                <Button fx:id="btnAjouter" text="Ajouter" onAction="#handleAjouter" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 100;"/>
            </HBox>
        </GridPane>
    </VBox>
</AnchorPane>