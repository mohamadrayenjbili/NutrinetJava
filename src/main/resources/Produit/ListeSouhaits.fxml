<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Produit.ListeSouhaitsController"
            prefWidth="800.0" prefHeight="600.0">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #4CAF50;">
            <children>
                <Button fx:id="btnRetour" text="Retour" onAction="#handleRetour"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;">
                    <font><Font size="14.0"/></font>
                    <HBox.margin><Insets left="10.0"/></HBox.margin>
                </Button>
                <Label text="Ma Liste de Souhaits" textFill="WHITE" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <font><Font name="System Bold" size="24.0"/></font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tableListeSouhaits" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNom" text="Produit" prefWidth="200.0"/>
                <TableColumn fx:id="colPrix" text="Prix" prefWidth="100.0"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="100.0"/>
                <TableColumn fx:id="colDateAjout" text="Date d'ajout" prefWidth="150.0"/>
                <TableColumn fx:id="colAction" text="Action" prefWidth="200.0"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <Label fx:id="lblMessage" textFill="#2c3e50"/>
        </HBox>
    </bottom>

</BorderPane> 