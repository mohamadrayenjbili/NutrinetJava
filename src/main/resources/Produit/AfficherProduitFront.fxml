<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Produit.AfficherProduitsFrontController">
    <children>
        <VBox prefHeight="600.0" prefWidth="900.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Top bar -->
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0"
                      style="-fx-background-color: #4CAF50;">
                    <children>
                        <!-- Label -->
                        <Label text="Nos Produits" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Label>

                        <!-- Spacer to push buttons to the right -->
                        <Region HBox.hgrow="ALWAYS"/>

                        <!-- Bouton Retour -->
                        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#retourConnexion"
                                style="-fx-background-color: #d63031;" text="Retour" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>

                        <!-- Bouton Voir mon panier -->
                        <Button fx:id="btnVoirPanier" mnemonicParsing="false" onAction="#voirPanier"
                                style="-fx-background-color: #FF9800;" text="Voir mon panier" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>

                        <!-- Bouton Liste de souhaits -->
                        <Button fx:id="btnListeSouhaits" mnemonicParsing="false" onAction="#voirListeSouhaits"
                                style="-fx-background-color: #e84393;" text="â™¥ Liste de souhaits" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <!-- Zone de contenu -->
                <ScrollPane fitToWidth="true" prefHeight="540.0" prefWidth="900.0" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="flowProduits" hgap="15.0" prefHeight="535.0" prefWidth="885.0" vgap="15.0">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
